	tools/jlc/jlc.cpp \

jlc_LIBS = \
    libtooling \
    $(if $(ENABLE_MLIR),libmlir) \
    libllvm \
    librvsdg \
    libutil \

jlc_EXTRA_LDFLAGS += \
	${MLIR_LDFLAGS} \
	$(shell $(LLVMCONFIG) --libs core irReader --ldflags --system-libs) \

$(eval $(call common_executable,jlc))

